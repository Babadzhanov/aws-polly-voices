{
  "name": "aws-polly-voices",
  "version": "1.0.0",
  "description": "Helper module to get AWS polly voices in an idiomatic way",
  "main": "dist/index.js",
  "scripts": {
    "start": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "serve": "node dist/index.js",
    "lint": "standard",
    "lint:fix": "npm run lint -- --fix",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --ignore */__mocks__/*,*.test.js",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chgasparoto/aws-polly-voices"
  },
  "keywords": [
    "aws",
    "polly"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "bugs": {
    "url": "https://github.com/chgasparoto/aws-polly-voices/issues"
  },
  "homepage": "https://github.com/chgasparoto/aws-polly-voices#readme",
  "author": "Cleber Gasparoto <chgasparoto@gmail.com> (https://github.com/chgasparoto)",
  "license": "MIT",
  "devDependencies": {
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "nodemon": "^1.19.1",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.24",
    "standard": "^14.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test",
      "pre-push": "npm run lint"
    }
  }
}
